@model dojoPrep.Models.RegisterViewModel
<h1>Register</h1>


<form asp-controller="User" asp-action="Register" method="post">
    <br><label asp-for="FirstName">First Name:</label><input id="FirstName" type="text" asp-for="FirstName">
    <span asp-validation-for="FirstName"></span>

    <br><label asp-for="LastName">Last Name:</label><input id="LastName" type="text" asp-for="LastName">
    <span asp-validation-for="LastName"></span>

    <br><label asp-for="Email">Email:</label><input id="Email" type="text" value="" asp-for="Email">
    <span asp-validation-for="Email"></span>

    <br><label asp-for="Password">Password:</label><input id="Password" value="" type="text" asp-for="Password">
    <span asp-validation-for="Password"></span>

    <p style="color: red">@ViewBag.NextError</p>
    <br><label for="pwc">Confirm Password:</label><input id="pwc" type="text" name="pwc">
    <span asp-validation-for="pwc"></span>
    
    <br><input type="submit" value="submit">
</form>
